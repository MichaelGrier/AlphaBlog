<h2 class="text-center mt-4"><%= @article.title %></h2>

<div class="container">

  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-body rounded">
        <div class="card-header fst-italic">
          <%= link_to gravatar_for(@article.user, size: 60), user_path(@article.user), class: "float-start" %>
          <p class="text-start" style="margin: 2.5rem 0 0 4rem">by <%= @article.user.username %></p>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <% if logged_in? && @article.user == current_user %>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(@article), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Delete article?' } %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created: <%= time_ago_in_words(@article.created_at) %> ago, Edited:
            <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>